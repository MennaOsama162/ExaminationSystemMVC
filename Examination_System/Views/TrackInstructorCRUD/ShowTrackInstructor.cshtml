@model IEnumerable<Track_Instructor>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowTrackInstructor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary " style="background-color:darkred ">
        <div class="container-fluid">
            <img src="~/whitelogo.svg" alt="Logo" width="200" height="90" class="d-inline-block align-text-top" />
        </div>
    </nav>
    <div class="container">
        <div class="text-center" style="height: 100vh">
            <h3 class="justify-content-center mt-5">Instructors Tracks Data</h3>
            <table class="table table-bordered table-hover border-danger align-items-center justify-content-center mt-5">

                
            <thead>
                <tr>
                   <th>Track</th>
                   <th>Instructor</th>
                   <th>Operation</th>

                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="3">No Data Found</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Track.Name</td>
                            <td>@item.instructor.Name</td>
                            <td>
                                <a class="btn btn-danger" asp-action="DeleteTrackInstructor" asp-controller="TrackInstructorCRUD" onclick="return confirm (' Are you sure?')" asp-route-idstring="@String.Join(",", item.TrackId, item.Ins_Id)">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            </table>
            <a asp-action="InsertTrackInstructor" asp-controller="TrackInstructorCRUD" class="btn btn-success">Add</a>
        </div>
    </div>
</body>
</html>
