@model IEnumerable<StudentCourse>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowStudentCourse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Course ID </th>
                <th>Srudent ID </th>
                <th>Grade </th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4">No StudentsCourse Found</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.course.Name</td>
                        <td>@item.student.Name </td>
                        <td>@item.Grade</td>
                        <td><a class="btn btn-danger" asp-action="DeleteStudentCourse" asp-controller="StudentCourseCRUD" onclick="return confirm ('Are you sure?')" asp-route-idstring="@String.Join(",", item.StudentId, item.CrsId)">Delete</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-action="InsertStudentCourse" asp-controller="StudentCourseCRUD" class="btn btn-info">Add</a>
</body>
</html>
