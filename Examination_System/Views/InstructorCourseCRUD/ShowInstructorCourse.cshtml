@model IEnumerable<InstructorCourse>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowInstructorCourse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="2">No InstructorCourse Found</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.instructor.Name</td>
                        <td>@item.Course.Name</td>
                        <td>
                            <a class="btn btn-danger" asp-action="DeleteInstructorCourse" asp-controller="InstructorCourseCRUD" onclick="return confirm (' Are you sure?')" asp-route-idstring="@String.Join(",", item.InstructorId, item.CrsId)">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-action="AddInstructorCourse" asp-controller="InstructorCourseCRUD" class="btn btn-info">Add</a>

</body>
</html>
