@model IEnumerable<Student>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowStudents</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary " style="background-color:darkred ">
        <div class="container-fluid">
             <img src="~/whitelogo.svg" alt="Logo" width="200" height="90" class="d-inline-block align-text-top" />
        </div>
    </nav>
    <div class="container">
        <div class="text-center" style="height: 100vh">
            <h3 class="mt-5">Students Data</h3>
            <table class="table table-bordered border-danger table-hover align-items-center justify-content-center mt-5">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Email</th>             
                        <th>Address</th>
                        <th>Image ID</th>
                        <th>Track ID</th>
                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="9">No Students Found</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Age</td>
                                <td>@item.Email</td>
                                <td>@item.Address</td>
                                <td>@item.Image_ID</td>
                                <td>@item.TrackId</td>
                                <td>
                                    <a asp-action="EditStudent" asp-controller="StudentCRUD" asp-route-id=" @item.Id" class="btn btn-primary">Edit</a>
                                    <a asp-action="DeleteStudent" onclick="return confirm('Are you sure?')" asp-controller="StudentCRUD" asp-route-id=" @item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <a class="btn btn-success text-light" asp-action="InsertStudent" asp-controller="StudentCRUD">Add New Student</a>
        </div>
    </div>

</body>
</html>
